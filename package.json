{
  "name": "cssc",
  "version": "1.0.0",
  "description": "Helping MCS Students",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build --target server",
    "start": "HOST=0.0.0.0 nuxt start",
    "export": "nuxt export",
    "serve": "nuxt serve",
    "generate": "nuxt build --target static && nuxt export",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lint": "yarn lint:js && yarn lint:style",
    "fix": "yarn fix:js && yarn fix:css",
    "fix:js": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "eslint --ext .js,.vue --fix ",
    "fix:prettier": "prettier -l --write \"{*.js,**/*.js,**/*.vue}\"",
    "fix:css": "stylelint -f --fix **/*.{vue,css}",
    "test": "jest"
  },
  "dependencies": {
    "@nuxt/content": "^1.14.0",
    "@nuxtjs/axios": "^5.12.1",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/firebase": "^6.1.1",
    "@tailwindcss/typography": "^0.2.0",
    "@vue/test-utils": "^1.1.1",
    "apexcharts": "^3.20.0",
    "dotenv": "^8.2.0",
    "firebase": "^7.19.1",
    "nuxt": "^2.14.7",
    "nuxt-matomo": "^1.2.4",
    "nuxt-mq": "^2.0.1",
    "vue-apexcharts": "^1.6.0",
    "vue-typed-js": "^0.1.2",
    "vuex-persistedstate": "^4.0.0-beta.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@nuxtjs/color-mode": "^2.0.0",
    "@nuxtjs/eslint-config": "^3.0.0",
    "@nuxtjs/eslint-module": "^2.0.0",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@nuxtjs/svg": "^0.1.12",
    "@nuxtjs/tailwindcss": "^3.0.0",
    "@nuxtjs/vuetify": "^1.11.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-nuxt": "^1.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^10.4.0",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "vue-jest": "^3.0.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,yml}": "prettier --write",
    "**/*.+(md)": "prettier --write",
    "**/*.+(js|ts|css|sass|less|graphql|vue)": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
